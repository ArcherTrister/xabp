@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@using X.Abp.Saas.Web.Pages.Saas.Tenants;
@model ConnectionStringsModalModel
@{
    Layout = null;
}

<form method="post" asp-page="/Saas/Tenants/ConnectionStringsModal" id="connectionStringsForm">
    <abp-modal>
        <abp-modal-header title="Database Connection Strings"></abp-modal-header>
        <abp-modal-body>

            <abp-input type="checkbox" asp-for="ConnectionStrings.UseSharedDatabase" />
            @if (!Model.ConnectionStrings.UseSharedDatabase)
            {
                <abp-input type="text" asp-for="ConnectionStrings.Default" />
            }

        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
