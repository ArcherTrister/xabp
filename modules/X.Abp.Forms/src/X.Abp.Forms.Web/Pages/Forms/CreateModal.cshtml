@page
@using Microsoft.AspNetCore.Authorization;
@using Microsoft.Extensions.Localization;
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@using Volo.Abp.AspNetCore.Mvc.UI.Layout;
@using X.Abp.Forms.Localization;
@model X.Abp.Forms.Web.Pages.Forms.CreateModalModel

@inject IPageLayout PageLayout
@inject IAuthorizationService Authorization
@inject IStringLocalizer<FormsResource> L
@inject IStringLocalizerFactory StringLocalizerFactory

@{
    Layout = null;
}

<form method="post" asp-page="/Forms/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["Menu:NewForm"]"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Form.Title" />
            <abp-input asp-for="Form.Description" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
