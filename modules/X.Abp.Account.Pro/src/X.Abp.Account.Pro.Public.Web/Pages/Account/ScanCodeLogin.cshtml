@page
@model X.Abp.Account.Public.Web.Pages.Account.ScanCodeLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>扫码登录</title>
    <!-- 引入 Bootstrap 样式 -->
    <link rel="stylesheet" href="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/5.3.2/css/bootstrap.min.css">
    <!-- 引入 Bootstrap JavaScript -->
    <script src="https://cdn.bootcdn.net/ajax/libs/twitter-bootstrap/5.3.2/js/bootstrap.min.js"></script>
    <style>
        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 centered">
                <h3 class="text-center mb-3"><img src="/images/scancodelogin.png" /></h3>
                <form method="post">
                    <div class="mb-3">
                        <input asp-for="QrCodeKey" hidden />
                        <div class="text-center">
                            <p> 正在尝试网页端扫码登录</p>
                            <p> 请确认是否为本人操作</p>
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success btn-block">确认登录</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
